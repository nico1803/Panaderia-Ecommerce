<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- archivo CSS -->
    <style>
        /* Estilos específicos para la página de registro */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa; /* Fondo gris claro */
            color: #333; /* Texto oscuro */
            font-family: 'Arial', sans-serif;
        }
        .container {
            max-width: 400px;
            padding: 20px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff; /* Fondo blanco */
        }
        h1 {
            margin-bottom: 20px;
            color: #343a40; /* Texto oscuro */
        }
        form div {
            margin-bottom: 15px;
        }
        input[type="text"],
        input[type="password"] {
            width: calc(100% - 22px);
            padding: 10px;
            border: 1px solid #ced4da; /* Borde gris */
            border-radius: 5px;
            background-color: #fff; /* Fondo blanco */
        }
        button {
            width: 100%;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff; /* Azul */
            color: white;
            cursor: pointer;
            margin-top: 10px;
        }
        button:hover {
            background-color: #0056b3; /* Azul más oscuro al pasar el mouse */
        }
        .login-link {
            display: block;
            margin-top: 20px;
            text-decoration: none;
            color: #28a745; /* Verde */
        }
        .login-link:hover {
            text-decoration: underline;
        }
        .return-home {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #343a40; /* Gris oscuro */
            color: white;
            text-decoration: none;
            cursor: pointer;
        }
        .return-home:hover {
            background-color: #292f36; /* Gris más oscuro al pasar el mouse */
        }
        .error-message {
            color: red;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <a class="return-home" href="/">Volver al Inicio</a>

    <div class="container">
        <h1>Registro</h1>

        <form id="registerForm" action="/register" method="POST" onsubmit="return validateForm()">
            <div>
                <label for="username">Usuario:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div>
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div>
                <label for="confirmPassword">Confirmar contraseña:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>
            <button type="submit">Registrarse</button>
            <p class="error-message" id="errorMessage"></p>
        </form>

        <a class="login-link" href="/login">¿Ya tienes cuenta? Inicia sesión</a>
    </div>

    <script>
        function validateForm() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const errorMessage = document.getElementById('errorMessage');

            // Validación de longitud de contraseña
            if (password.length < 8) {
                errorMessage.textContent = 'La contraseña debe tener al menos 8 caracteres.';
                return false;
            }

            // Validación de coincidencia de contraseñas
            if (password !== confirmPassword) {
                errorMessage.textContent = 'Las contraseñas no coinciden.';
                return false;
            }

            return true;
        }
    </script>

</body>
</html>